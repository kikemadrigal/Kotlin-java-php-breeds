<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textAlignment="center"
        android:textSize="40dp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/press_to_play"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView1"
        tools:layout_editor_absoluteX="0dp" />

    <ImageButton
        android:id="@+id/imageButtonCat"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/cat"
        android:tooltipText="Cats"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />
    <ImageButton
        android:id="@+id/imageButtonDog"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/dog"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonCat" />
    <ImageButton
        android:id="@+id/imageButtonRecords"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/records"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonDog" />
    <ImageButton
        android:id="@+id/imageButtonSettings"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/settings"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_button"
        app:layout_constraintTop_toBottomOf="@+id/imageButtonRecords" />

</androidx.constraintlayout.widget.ConstraintLayout>